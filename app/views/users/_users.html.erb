<% users.each do |user| %>
  <div class="row list-group-item user_info">

    <h4 class="list-group-item-heading">
      <small class="list-group-item-text pull-right">
        <% if current_user?(user) || current_user.admin? %>
          <%= link_to content_tag(:span,'', class: "glyphicon glyphicon-edit"), 
            edit_user_path(user) %>
        <% end %>
        <% if current_user.admin? && !current_user?(user) %>
          | <%= link_to content_tag(:span, '', class: "glyphicon glyphicon-remove-circle"),
              user, method: :delete, data: { confirm: "Are you sure?" } %>
        <% end %>
      </small>
      <%= link_to user.name, '#' %>
      <small><%= user.email %></small>
    </h4>
    
    <p class="list-group-item-text small">
      <span>Created at: <%= user.created_at.strftime("%m/%d/%Y %H:%M:%S") %> |</span>
      <span>Last Updated at: <%= user.updated_at.strftime("%m/%d/%Y %H:%M:%S") %></span>
    </p>

  </div>
<% end %>
