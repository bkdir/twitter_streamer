<% provide(:title, "Twitter Users") %>
<div class= "row">
  <div class= "col-lg-10 col-lg-offset-1">
    <div class="row">

      <div class="col-lg-4 col-md-4 col-sm-4">
        <div class="row">
          <p class="list-group-item-text">
            <%= image_tag( original_image(@user[:profile_image_url]),
                   class: "img-rounded img-thumbnail img-responsive",
                   size: 200)%>
         </p>
         <h3 class="">
           <%= link_to "#{fa_icon 'twitter'}#{@user[:name]}".html_safe, 
              "https://twitter.com/#{@user[:screen_name]}", target: "_blank" %> 
              <small class="">@<%= @user[:screen_name] %></small>
         </h3>

            <!-- Follwer/Following count -->
            <p class="list-group-item-text">
              Followers: <%= @user[:followers_count] %></p>
            <p class="list-group-item-text">
              Following: <%= @user[:friends_count] %></p>
            <p class="list-group-item-text">
              Deleted Tweets: <%= deleted_tweet_count(@user) %></p>
            <p class="list-group-item-text">
              Last Tweet: <%= last_tweeted_date_of(@user) %></p>
        </div>
      </div><!--4-->

      <div class="col-lg-8 col-md-8 col-sm-8">
        <div class="row">
          <div class="col-lg-12">
            <div class="list-group">
							<div href="#" class="list-group-item row">
								<h4 class="list-group-item-heading center">
                  <span data-toggle="tooltip" data-placement="top" title="Only tweets with content will be displayed">Deleted Tweets
                    <%= fa_icon 'info-circle' %></span>
                </h4>
							</div>
              <div class="row"><%= will_paginate(@deleted_tweets) %></div>
              <%= render 'tweets/tweets', common_page: false, tweets: @deleted_tweets %>
              <div class="row"><%= will_paginate(@deleted_tweets) %></div>
            </div>
          </div>
        </div>
      </div><!--8-->

    </div><!--row -->
  </div><!-- col-lg-10 -->
</div><!-- row -->
